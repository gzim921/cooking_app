<ul class="instructions_list">
    <%= form.fields_for :instructions do |instructions_field| %>
        <div class="field">
            <li>
                <div class="control">
                    <div class="columns is-mobile">
                        <div class="column is-2">
                            <%= instructions_field.number_field :order, class: 'input', placeholder: 'Step' %>
                        </div>
                        <div class="column">
                            <%= instructions_field.text_field :instruction_info, class: 'input', placeholder: 'Instruction...' %>
                        </div>
                        <div class="column is-1">
                            <div class="icon_times"> <i class="fa fa-times fa-2x"></i> </div>
                        </div>
                    </div>
                </div>
            </li>
        </div>
    <% end %>
</ul>

<div class="field">
    <div class="control has-icons-left has-icons-right" style="margin-top:5%;">
        <div class="input" id="addInstruction" > Add </div>
        <span class="icon is-small is-left">
            <i class="fa fa-plus"></i>
        </span>
    </div>
</div> 